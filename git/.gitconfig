[core]
    excludesfile = ~/.gitignore
[include]
    path = ~/.gitconfig_local
[push]
    default = current
[alias]
    a = add
    d = diff
    f = fetch -p # Fetch and prune previously tracked branches
    fa = fetch --prune --all --tags # Fetch and prune previously tracked branches
    co = checkout
    ci = commit
    st = status
    br = branch
    bd = branch -d # Delete merged branch
    bD = branch -D # Force delete a branch
    pu = push --force-with-lease
    hist = log --decorate --oneline --graph --date=short --all
    h = hist
    dump = cat-file -p
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
